[core]
	excludesfile = ~/.dotfiles/git/gitignore
        pager = less -FRSX

[format]
  	pretty = format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset

[push]
  	default = upstream

[rerere]
  	enabled = true

[status]
        relativePaths = false

[include]
        path = ~/.dotfiles/git/configs/alias.gitconfig	
  	path = ~/.dotfiles/git/configs/color.gitconfig	
  	path = ~/.dotfiles/git/configs/user.gitconfig

